#/bin/bash

wget https://www.privateinternetaccess.com/openvpn/openvpn.zip
mkdir openvpn
unzip openvpn.zip -d openvpn
printf "Cleanup...\n"
rm -rf openvpn.zip

printf "Username: "
read varname
printf "Password: "
read varpass

if [ "$varname" != "" ] && [ "$varpass" != "" ]; then
	touch openvpn/pass.txt
	echo "$varname
$varpass" > openvpn/pass.txt
	chmod 600 openvpn/pass.txt
	printf "If you missed typed your account information. You can find the file located at openvpn/pass.txt\n"
fi
